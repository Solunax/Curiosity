<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Curiosity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffca28</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#EF2121</item>
        <item name="colorControlActivated">@color/myblue</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@android:color/transparent</item>
        <!-- 클릭했을때 날짜 원표시-->
        <item name="colorControlHighlight">@color/myblue</item>
        <!--캘린더 배경 스타일 -->
        <item name="android:windowBackground">@color/black</item>
        <!-- OK 버튼-->
        <item name="android:textColor">#00ff00</item>
        <!-- 메인 배경 날짜 표시-->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- 메인 배경 월 표시 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!--윗 배경 날짜, 월-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- 윗 배경 년도-->
        <item name="android:textColorSecondaryInverse">@color/white</item>
    </style>


</resources>

